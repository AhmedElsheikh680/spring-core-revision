<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

<!--    <bean id="myUser" class="cm.spring.di.UserImpl" >-->
<!--        <constructor-arg ref="myPerson"></constructor-arg>-->
<!--    </bean>-->


    <bean id="myUser" class="cm.spring.di.UserImpl">
        <property name="person" ref="myPerson"></property>
        <property name="email" value="${user.email}"></property>
        <property name="team" value="${user.team}"></property>
    </bean>
    <bean id="myPerson" class="cm.spring.di.PersonImpl"/>

<!--    <bean id="mySport" class="cm.spring.ioc.Basketball" />-->
</beans>